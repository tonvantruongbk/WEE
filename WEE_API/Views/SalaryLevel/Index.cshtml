
@using WEE_API.Common
@using WEE_API.Models
@using WEE_API.ViewModel
@{
    var screenTitle = "Mức lương";
    ViewBag.Title = screenTitle;
    var ViewDT = new ViewDataDictionary<SalaryLevel>();
    var filterOnHeader = "HeaderFilter"; //"DataTablePutExternalFilter";
}
@section PageStyles
{
    <style>
    </style>
}

<div id="customForm">
    <fieldset class="name">
        <div data-editor-template="SalaryLevelName"></div>
    </fieldset>
</div>

<div class="row">
    <div class="col-sm-12">
        @Html.Partial("_ExternalFilter", new ExternalFilterSettings { ScreenTitle = screenTitle, FilterOn = filterOnHeader })
        <table id="DataTableSalaryLevel"
               class="table table-bordered table-hover table-header-fixed no-footer order-column"
               data-orders='[[0, "asc"]]'
               data-select="true"
               data-dom="fBrtlpi">
            <thead>
                <tr>
                    <th data-filter_type="auto_complete" data-data="SalaryLevelName" data-type="string" data-class="" data-align="" data-listvisible="true" data-editvisible="true">
                        @(ModelMetadata.FromLambdaExpression(x => x.SalaryLevelName, ViewDT).DisplayName ?? ModelMetadata.FromLambdaExpression(x => x.SalaryLevelName, ViewDT).PropertyName)
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section scripts{
    @Html.Partial("_CommonDatatablesEditor", new DatatablesEditorViewModel()
{
    Controller = "SalaryLevel",
    TableID = "DataTableSalaryLevel",
    FieldID = "SalaryLevelID",
    ButtonPlaceID = "buttons",
    buttonExternal = false,
    Ydacf = filterOnHeader,
    CustomEditorFormID = "customForm"
})
}